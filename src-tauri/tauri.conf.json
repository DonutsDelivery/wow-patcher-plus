{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "WoW HD Patcher",
  "version": "1.3.0",
  "identifier": "com.wow.hdpatcher",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "WoW HD Patcher",
        "width": 850,
        "height": 800,
        "minWidth": 600,
        "minHeight": 500,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "shortDescription": "Automated HD Patch installer for WoW",
    "longDescription": "Download and install HD texture packs for WoW with automatic dependency resolution, quality presets, and progress tracking.",
    "category": "Game",
    "copyright": "MIT License",
    "linux": {
      "appimage": {
        "bundleMediaFramework": true
      },
      "deb": {
        "depends": []
      },
      "rpm": {
        "depends": []
      }
    },
    "windows": {
      "nsis": {
        "installMode": "currentUser"
      }
    }
  }
}
